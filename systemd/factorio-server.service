[Unit]
Description=factorio-server
After=syslog.target network.target nss-lookup.target network-online.target
StartLimitBurst=5
StartLimitIntervalSec=60

[Service]
Type=simple
Restart=on-failure
TimeoutStopSec=300
RestartSec=60
User=kai
WorkingDirectory=/home/kai/Steam/steamapps/common/FactorioServer
ExecStartPre=bash -c /home/kai/projects/infrastructure/scripts/factorio-server-pre.sh
ExecStart=bash -c /home/kai/projects/infrastructure/scripts/factorio-server-start.sh
ExecStop=kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target
